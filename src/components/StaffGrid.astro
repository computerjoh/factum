---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type StaffMember = CollectionEntry<"staff">["data"];
type Props = { staff: StaffMember[] };

const { staff } = Astro.props as Props;
---

<div
	class="mt-10 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3"
>
	{
		staff.map((person) => (
			<article class="flex h-full flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-lg shadow-slate-200 transition hover:-translate-y-1 hover:shadow-xl hover:shadow-rose-100">
				<div class="aspect-[4/5] bg-slate-100">
					<Image
						src={person.photo}
						alt={`Headshot of ${person.name}`}
						width={400}
						height={500}
						class="h-full w-full object-cover"
						loading="lazy"
					/>
				</div>
				<div class="p-5 space-y-2">
					<p class="text-lg font-semibold text-slate-900">
						{person.name}
					</p>
					<p class="text-sm text-slate-600">
						{person.title}
					</p>
				</div>
			</article>
		))
	}
</div>
